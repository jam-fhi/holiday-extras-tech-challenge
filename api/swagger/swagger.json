        "description": "Allows a user to get their profile details",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "_id",
            "description": "The mongo database id for the user",
            "in": "formData",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "created account"
          },
          "404": {
